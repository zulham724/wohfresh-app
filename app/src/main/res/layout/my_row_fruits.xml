<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivFruits"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:clickable="true"
                android:scaleType="fitXY" />

            <RatingBar
                android:theme="@style/myRateFruits"
                android:id="@+id/rtbFruits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.01"
                android:isIndicator="true"
                style="?android:attr/ratingBarStyleSmall"/>

            <TextView
                android:id="@+id/tvFruitsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/tertiary_text_dark"
                android:text="Small thailan water melon"/>

            <TextView
                android:id="@+id/tvFruitsPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Rp. 100,000"
                android:gravity="end"/>

            <TextView
                android:id="@+id/tvFruitsUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="kilogram"
                android:gravity="end"
                android:layout_marginBottom="2dp"/>

            <Button
                android:id="@+id/btnFruitsCart"
                android:textColor="#fff"
                android:background="@drawable/my_bg_button_rounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:padding="2dp"
                android:textAllCaps="false"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>